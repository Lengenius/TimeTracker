<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_timer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Timer"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/timer_component_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_start" />

        <ImageButton
            android:id="@+id/timer_component_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:contentDescription="@string/end_tracker"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_stop" />

    </LinearLayout>

</LinearLayout>